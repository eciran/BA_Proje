@model BA_Proje_DataLayer.Category

@{
	ViewBag.Title = "AddCategory";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="card-header">
	<div class="card-body">



		@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				<h2 style="text-align:center">Kategori Ekle</h2>
				<hr />
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(model => model.CategoryName, "Kategori Adı", htmlAttributes: new { @class = "control-label col-md-12" })
					<div class="col-md-12">
						@Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" , @required = "required" } })
						@Html.ValidationMessageFor(model => model.CategoryName,"", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.CategoryDesc, "Kategori Açıklaması", htmlAttributes: new { @class = "control-label col-md-3" })
					<div class="col-md-12">
						@Html.EditorFor(model => model.CategoryDesc, new { htmlAttributes = new { @class = "form-control", @required = "required"} })
						@Html.ValidationMessageFor(model => model.CategoryDesc, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Ekle" class="btn btn-primary" />
					</div>
				</div>
			</div>

		}

		<div>
			@Html.ActionLink("Listeye Git", "List")
		</div>
	</div>
</div>



@model BA_Proje_DataLayer.Brand

@{
	ViewBag.Title = "AddBrand";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
	<div class="card-body">
		@using (Html.BeginForm("AddBrand", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				<h2 style="text-align:center">Marka Ekle</h2>
				<hr />
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(model => model, "Marka Adı", htmlAttributes: new { @class = "control-label col-md-12" })
					<div class="col-md-12">
						@Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
						@Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model, "Marka Resmi", htmlAttributes: new { @class = "control-label col-md-3" })
					<div class="col-md-12">
						<input type="file" name="photoPath" id="photoPath" />
						@Html.ValidationMessageFor(model => model.BrandPhoto, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Ekle" class="btn btn-primary" />
					</div>
				</div>
			</div>

		}

		<div>
			@Html.ActionLink("Marka Listesine Git", "List")
		</div>
	</div>
</div>

@using BA_Proje_DataLayer
@model IEnumerable<Shipping>

@{
	ViewBag.Title = "List";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card-header">
	<div class="card-body">
		@Html.ActionLink("Kargo  Ekle", "AddShip")	<h2 class="card-header" style="text-align:center">Kargo Firmaları</h2>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayName("Kargo Adı")
				</th>
				<th>
					@Html.DisplayName("Kargo Telelefon")
				</th>


				<th></th>
			</tr>
			@foreach (Shipping item in Model)
			{
				<tr>
					<td class="jsgrid-cell">
						@Html.DisplayFor(modelItem => item.ShippingName)

					</td>
					<td class="jsgrid-cell">

						@Html.DisplayFor(modelItem => item.ShipPhone)
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.ShippingID }) |

						@Html.ActionLink("Delete", "Delete", new { id = item.ShippingID}, new { onclick = "return confirm('Silmek İstediğinize Emin Misiniz?');" })
					</td>
				</tr>
			}
		</table>


	</div>

</div>


@model IEnumerable<BA_Proje_DataLayer.Member>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
	<div class="card-body">
		@Html.ActionLink("Üye Ekle", "Create")	<h2 class="card-header" style="text-align:center">Üye Listesi</h2>
		<table class="table">
			<tr>
				<th>
					@Html.Label("Üye Tipi")
				</th>
				<th>
					@Html.Label("İsim")
				</th>
				<th>
					@Html.Label("Soyisim")
				</th>
						<th>
					@Html.Label("Email")
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.UserRole.RoleName,new {  htmlAttributes=new { @style = "text-transform: capitalize" } })
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.FirstName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.LastName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>	

					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.MemberID }) |
						@Html.ActionLink("Details", "Details", new { id = item.MemberID }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.MemberID }, new { onclick = "return confirm('Silmek İstediğinize Emin Misiniz?');" })
					</td>
				</tr>
			}

		</table>
		</div>
	</div>

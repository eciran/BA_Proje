@model BA_Proje_DataLayer.Member

@{
	ViewBag.Title = "Details";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
	<div class="card-body">

			<h3 style="text-align:center">Üye Detayı</h3>
			<hr />
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayName("Üye Tipi")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.UserRole.RoleName)
				</dd>

				<dt>
					@Html.DisplayName("İsim")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.FirstName)
				</dd>

				<dt>
					@Html.DisplayName("Soyisim")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.LastName)
				</dd>

				<dt>
					@Html.DisplayName("Kayıt Tarihi")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.CreatedDate)
				</dd>

				<dt>
					@Html.DisplayName("Email")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.Email)
				</dd>

				<dt>
					@Html.DisplayName("Şifre")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.Password)
				</dd>

				<dt>
					@Html.DisplayName("Adres")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.Address)
				</dd>

			</dl>
		</div>
		<p>
			@Html.ActionLink("Düzenle", "Edit", new { id = Model.MemberID }) |
			@Html.ActionLink("Üye Listesine Dön", "Index")
		</p>
	</div>
